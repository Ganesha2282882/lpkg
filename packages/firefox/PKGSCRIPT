# When uninstalling the package, try to install it again. It will let you uninstall it.

git_url="https://aur.archlinux.org/$RANDOM.git"

build() {
if [ -f /usr/local/bin/firefox ]; then
echo "Firefox is on the system. Uninstalling it"
rm -rf /usr/local/bin/firefox /usr/share/applications/firefox.desktop /var/tmp/firefox
exit 0
fi
cat > /usr/local/bin/firefox <<EOF
#!/bin/sh
pushd /var/tmp
wget "https://download.mozilla.org/?product=firefox-latest-ssl&os=linux64&lang=en-US" -O firefox.tar.bz2
tar -xvpf firefox.tar.bz2
chmod 777 /var/tmp/firefox --recursive
popd
/var/tmp/firefox/firefox
rm -rf /var/tmp/firefox
EOF
cat > /usr/share/applications/firefox.desktop <<EOF
[Desktop Entry]
Type=Application
Encoding=UTF-8
Name=Firefox
Comment=Browse the internet freely.
Exec=firefox
Icon=firefox
Terminal=False
EOF
}
