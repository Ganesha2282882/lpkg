# When you build this package, it runs Firefox. Your settings are kept because it's in a different location.

git_url="https://aur.archlinux.org/$RANDOM.git"

build() {
cuser=`logname | head -n 1`
wget -O firefox.tar.bz2 'https://download.mozilla.org/?product=firefox-latest-ssl&os=linux64&lang=en-US'
tar -xvpf firefox.tar.bz2
mkdir /home/$cuser/.mozilla
ln -sf /home/$cuser/.mozilla /root
DISPLAY=:0 firefox/firefox
rm /root/.mozilla
}
